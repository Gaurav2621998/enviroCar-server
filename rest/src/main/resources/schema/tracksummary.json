{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://schema.envirocar.org/tracksummary.json#",
    "type": "object",
    "additionalProperties": false,
    "required": [
		"id",
		"startPosition",
		"endPosition"
    ],
    "properties": {
		"id": {
			"type": "string"
        },
		"startPosition": {
			"geometry": {
				"required": [
					"type",
					"coordinates"
				],
				"$ref": "#/definitions/Point"
			}
		},
		"endPosition": {
			"geometry": {
				"required": [
					"type",
					"coordinates"
				],
				"$ref": "#/definitions/Point"
			}
		}
    },
    "definitions": {
        "Point": {
            "title": "Point",
            "type": "object",
            "properties": {
                "type": {
                    "enum": [
                        "Point"
                    ]
                },
                "coordinates": {
                    "$ref": "#/definitions/position"
                }
            }
        },
        "position": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "additionalItems": false,
            "items": [
                {
                    "type": "number"
                },
                {
                    "type": "number"
                }
            ]
        }
	}
}
